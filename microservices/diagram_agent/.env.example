# =============================================================================
# Diagram Agent Configuration Example
# =============================================================================
# Copy this file to .env and update the values according to your setup

# =============================================================================
# OpenAI Configuration
# =============================================================================
# API key for the primary model (required for OpenAI models)
MODEL_API_KEY=your_openai_api_key_here

# Fallback API key (used when primary fails)
FALLBACK_MODEL_API_KEY=your_fallback_api_key_here

# Primary model name
MODEL_NAME=gpt-4-turbo

# Fallback model name
FALLBACK_MODEL_NAME=claude-3-sonnet-20240229

# Model temperature (0.0 = deterministic, 1.0 = creative)
TEMPERATURE=0.0

# =============================================================================
# LangGraph Configuration
# =============================================================================
# Graph visualization renderer (png, svg, pdf)
GRAPH_RENDERER=png

# Enable LangChain tracing for debugging (true/false)
LANGCHAIN_TRACING_V2=false



# =============================================================================
# Application Configuration
# =============================================================================
# Host address for the FastAPI server
HOST=0.0.0.0

# Port for the FastAPI server
PORT=3502

# Enable auto-reload during development (true/false)
RELOAD=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# =============================================================================
# Diagram Configuration
# =============================================================================
# Default output format for generated diagrams (png, svg, pdf)
DEFAULT_OUTPUT_FORMAT=png

# Temporary directory for diagram generation
TEMP_DIR=/tmp/diagram_generator